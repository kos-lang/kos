# ==, !=
do {
    var different_values = [ void, false, true, 0, 1, -1, "", "0", [], [0], {}, {"0":0} ]
    const len = different_values.size
    for var y = 0; y < len; y += 1 {
        const a = different_values[y]
        for var x = 0; x < len; x += 1 {
            const b   = different_values[x]
            const c   = x == y
            const eq  = a == b
            const neq = a != b
            assert eq == c
            assert neq == ! c
        }
    }
}

