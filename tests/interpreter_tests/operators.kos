##############################################################################
# typeof's arguments cannot be optimized-out
do {
    fun get_type()
    {
        var cnt = 0

        fun increment
        {
            cnt += 1
        }

        const type = typeof [ increment() ]

        return [ cnt, type ]
    }

    const cnt, type = get_type()

    assert cnt  == 1
    assert type == "array"
}

##############################################################################
# multi-assignment
do {
    const input = [ "a", "b", "c", "d" ]
    var obj = { }
    obj.a, obj.b, obj.c, obj.d = input
    assert obj.a == "a"
    assert obj.b == "b"
    assert obj.c == "c"
    assert obj.d == "d"

    obj = { }
    obj.a, void, obj.b, obj.a = input
    assert obj.a == "d"
    assert obj.b == "c"

    obj = { }
    var ary = [ 0, 0 ]
    var c = void
    void, ary[1], obj["a"], c = input
    assert ary[0] == 0
    assert ary[1] == "b"
    assert obj.a == "c"
    assert c == "d"
}
