# positive zero equals negative zero
do {
    const positive = 0.0
    assert typeof positive == "float"

    const negative = (x=>-x)(positive)
    assert typeof negative == "float"

    assert positive == negative

    const not_equal = positive != negative
    assert ! not_equal
}

