import base.print
do {
    var head = []

    head.reserve(256 * 1024)

    var idx   = 0
    var size  = 1024 * 1024
    var total = 0

    loop {
        # Allocate array
        const new_array = []
        try {
            new_array.resize(size)
            total += size
        }
        catch const e {
            if size <= 128 {
                if total > 128 * 1024 {
                    #print("Allocated \(head.size + 1) arrays, total \(total) bytes")
                    break
                }
                else {
                    throw e
                }
            }
            size /= 2
            continue
        }

        # Chain new array
        head.push(new_array)
        idx += 1

        # Allocate small throw-away object
        const throw_away = [void]
        throw_away[0] = new_array
    }
}
