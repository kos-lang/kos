    var ok = true
    try {
        net.socket(net.AF_INET6).bind("localhost")
    }
    catch (const e) {
        ok = false
    }
    if ok {
        net.socket(net.AF_INET6).bind("::1")
        net.socket(net.AF_INET6).bind("::1", 11006)
    }
