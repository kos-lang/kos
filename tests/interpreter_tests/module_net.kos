do {
    net.socket().bind()
    net.socket().bind("")
    net.socket().bind("localhost")
    net.socket().bind("127.0.0.1")
    net.socket().bind("localhost", 11000)
    net.socket().bind("127.0.0.1", 11001)
    net.socket().bind(port = 11002)

    net.socket(net.AF_INET6).bind()
    net.socket(net.AF_INET6).bind("")
