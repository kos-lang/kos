# lang.buffer.prototype.fill

do {
    const b = buffer(32)

    b.fill(1)
    for var i = 0; i < b.size; i += 1 {
        assert b[i] == 1
    }

    b.fill(50)
    for var i = 0; i < b.size; i += 1 {
        assert b[i] == 50
    }

    b.fill(24, 100)
    for var i = 0; i < b.size; i += 1 {
        if i < 24 {
            assert b[i] == 50
        }
        else {
            assert b[i] == 100
        }
    }

    b.fill(10, 20, 17)
    for var i = 0; i < b.size; i += 1 {
        if i < 10 {
            assert b[i] == 50
        }
        else if i < 20 {
            assert b[i] == 17
        }
        else if i < 24 {
            assert b[i] == 50
        }
        else {
            assert b[i] == 100
        }
    }

    b.fill(-24, void, 255.0)
    for var i = 0; i < b.size; i += 1 {
        if i < 8 {
            assert b[i] == 50
        }
        else {
            assert b[i] == 255
        }
    }

    b.resize(4)
    b.fill(void, void, 5)
    for var i = 0; i < b.size; i += 1 {
        assert b[i] == 5
    }

    b.fill(void, 6)
    for var i = 0; i < b.size; i += 1 {
        assert b[i] == 6
    }

    expect_fail(λ->(b.fill(false, void, 0)))
    expect_fail(λ->(b.fill(void, false, 0)))
    expect_fail(λ->(b.fill(false, 0)))
    expect_fail(λ->(b.fill(void, void, 256)))
}

