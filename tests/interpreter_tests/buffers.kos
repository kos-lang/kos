import lang: buffer, integer, print, range

fun expect_fail(function)
{
    var failed = false
    try {
        function()
    }
    catch const e {
        failed = true
    }
    assert failed
}

do {
    assert typeof buffer           == "function"
    assert typeof buffer.prototype == "object"
}

do {
    const b = buffer()

    assert typeof b == "buffer"
    assert b.size   == 0
    assert b instanceof buffer

    b.reserve(100)
    assert b.size == 0

    expect_fail(λ->(b[0]))
    expect_fail(λ->(b[-1]))
}

# TODO add support for converting array of numbers to buffer through buffer constructor
fun buffer_from_array(a)
{
    const b = buffer(a.size)
    for var i in range(a.size) {
        b[i] = a[i]
    }
    return b
}

do {
    const b = buffer()
    assert b instanceof buffer

    expect_fail(fun { buffer.prototype = {} })
    assert typeof buffer.prototype == "object"

    assert b instanceof buffer
}

do {
    expect_fail(λ->(buffer(-1)))
}

do {
    const b = buffer()

    assert typeof b == "buffer"
    assert b.size   == 0
    assert b instanceof buffer
}

do {
    const b = buffer(10)

    assert typeof b == "buffer"
    assert b.size   == 10
    assert b instanceof buffer

    for var i in range(b.size) {
        assert b[i] == 0
    }

    for var i in range(b.size) {
        b[i] = i
    }

    assert b[0]   == 0
    assert b[5]   == 5
    assert b[9]   == 9
    assert b[-1]  == 9
    assert b[-5]  == 5
    assert b[-10] == 0

    expect_fail(λ->(b[10]))
    expect_fail(λ->(b[-11]))

    b.reserve(512)

    assert b.size == 10

    assert b[0]   == 0
    assert b[5]   == 5
    assert b[9]   == 9
    assert b[-1]  == 9
    assert b[-5]  == 5
    assert b[-10] == 0

    expect_fail(λ->(b[10]))
    expect_fail(λ->(b[-11]))

    assert b[integer("3")]  == 3
    assert b[integer("-2")] == 8
    assert b[9.9]           == 9

    b[-3] = 100
    assert b[-3] == 100

    b[5] = 200.5
    assert b[-5] == 200

    b[1] = 255.9
    assert b[1] == 255

    b[-7.1] = 0.01
    assert b[2] == 0

    b[-7] = 0.99
    assert b[3] == 0

    expect_fail(fun { b[10]  = 0     })
    expect_fail(fun { b[-11] = 0     })
    expect_fail(fun { b[0]   = -1    })
    expect_fail(fun { b[0]   = 256   })
    expect_fail(fun { b[0]   = 256.1 })
    expect_fail(fun { b[0]   = -1.01 })

    expect_fail(fun { b[:]   = 0     })
    expect_fail(fun { b[1:2] = 0     })

    expect_fail(fun { b[5] = void    })
    expect_fail(fun { b[5] = true    })
    expect_fail(fun { b[5] = false   })
    expect_fail(fun { b[5] = ""      })
    expect_fail(fun { b[5] = "0"     })
    expect_fail(fun { b[5] = []      })
    expect_fail(fun { b[5] = [0]     })
    expect_fail(fun { b[5] = buffer()})
    expect_fail(fun { b[5] = buffer(1) })
    expect_fail(fun { buffer().reserve(-1) })

    assert b.size == 10
    assert b[0]   == 0
    assert b[1]   == 255
    assert b[2]   == 0
    assert b[3]   == 0
    assert b[4]   == 4
    assert b[5]   == 200
    assert b[6]   == 6
    assert b[7]   == 100
    assert b[8]   == 8
    assert b[9]   == 9
}

do {
    const b = buffer(17)
    assert b.size == 17
    for var i in range(b.size) {
        b[i] = i + 100
    }

    var count = 0
    for var i in b {
        assert i == count + 100
        count += 1
    }
    assert count == 17
}

