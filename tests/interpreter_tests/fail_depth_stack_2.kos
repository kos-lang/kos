var more = true

fun go_deeper
{
    try {
        if more {
            go_deeper.async(void, [])
        }
    }
    catch const e {
        # if we cannot spawn any more threads, ignore it
        more = false
    }

    go_deeper()

    # Second invocation to prevent tail recursion optimization from weakening the test
    go_deeper()
}

go_deeper()
