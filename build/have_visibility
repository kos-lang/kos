#!/bin/sh

# SPDX-License-Identifier: MIT
# SPDX-FileCopyrightText: Copyright (c) 2014-2024 Chris Dragan

set -e

CC="$1"

SRC=$(mktemp)
OBJ=$(mktemp)

echo "void test() { }" > "$SRC"

if "$CC" -x c -fvisibility=hidden -c -o "$OBJ" "$SRC" >/dev/null 2>&1; then
    echo "true"
fi

rm -f "$SRC" "$OBJ"
